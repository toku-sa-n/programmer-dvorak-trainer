{
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "next/core-web-vitals",
        "eslint-config-prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "overrides": [
        {
            "files": ["**/*.ts", "**/.tsx"]
        }
    ],
    "rules": {
        "@typescript-eslint/no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ]
    }
}
